<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.TheEventWelfare.EventConnects">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.TheEventWelfare.EventConnects.CreateUserId"
            android:screenOrientation="portrait"
            android:theme="@style/SearchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.TheEventWelfare.EventConnects.SigninPage"
            android:screenOrientation="portrait"
            android:theme="@style/SearchTheme"
            />
        <activity android:name="com.TheEventWelfare.EventConnects.NavigationDrawerPage"
            android:screenOrientation="portrait"/>
        <activity android:name="com.TheEventWelfare.EventConnects.ForgotPassword"
            android:screenOrientation="portrait"
            android:theme="@style/SearchTheme"/>
        <activity android:name="com.TheEventWelfare.EventConnects.FullScreenImageView"
            android:screenOrientation="portrait"
            android:theme="@style/SearchTheme"/>
    </application>

</manifest>